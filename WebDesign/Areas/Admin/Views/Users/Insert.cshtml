<a href="/Admin/Users" class="btn btn-primary">Geri Git</a>

<!--Controller tarafına inputlara girilen verileri göndermemizi sağlayan bir mekanizmadır.-->
<form action="/Admin/Users/Insert" method="post">
    <br />
    <label>Kullanıcı Adı: </label>

    <input type="text" name="Name" placeholder="İsim" class="form-control" /><br />
    <label>Kullanıcı Eposta: </label>
    <input type="email" name="Email" placeholder="E-Posta" class="form-control" /><br />
    <label>Kullanıcı Şifre: </label>
    <input type="password" name="Password" placeholder="Şifre" class="form-control" /><br />

    <label>Kullanıcı Rol: </label><br />
    <select name="Roles" class="form-control">
        <option value="Admin">Admin</option>
        <option value="Uye">Uye</option>
    </select>
    <br />
    <button type="submit" class="btn btn-primary">Kaydet</button>

</form>

@if (ViewBag.message != null)
{
    <div class="alert alert-info">@ViewBag.message</div>
}